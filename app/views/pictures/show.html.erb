<br>
<div class="row">
  <div class="hidden-xs col-sm-12">
    <div class="center-block">

      <% if flash[:notice] %>
        <div class="alert alert-success alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="閉じる">
            <span aria-hidden="true">×</span></button>
          <strong>お知らせ</strong> ： <%= flash[:notice] %>
        </div>
      <% end %>

      <%= render :partial => "post", :locals => { picture: @picture } %>

      <% if @picture.favorite_users.present? %>
          <div class="list-group-item">
            <strong>いいね！したユーザ </strong>
            <% @picture.favorite_users.each do |favuser| %>
              <span class="label label-success"><%= favuser.name %></span>
            <% end %>
          </div>
      <% end %>

    </div>
  </div>

  <div class="visible-xs-block">

    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">

        <% if flash[:notice] %>
          <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="閉じる">
              <span aria-hidden="true">×</span></button>
            <strong>お知らせ</strong> ： <%= flash[:notice] %>
          </div>
        <% end %>

        <%= render :partial => "post", :locals => { picture: @picture } %>

        <% if @picture.favorite_users.present? %>
            <div class="list-group-item">
              <strong>いいね！したユーザ：</strong>
              <% @picture.favorite_users.each do |favuser| %>
                <span class="label label-success"><%= favuser.name %></span>
              <% end %>
            </div>
        <% end %>

      </div>
    </div>

  </div>

</div>
